    "version": "0.2.0",
    "configurations": [
        {
            "name":"Python: Capstone",
            "type":"python",
            "request":"launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "capstone/capstone-api.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--host","0.0.0.0",
                "--port","5001",
				"--no-debugger",
                "--no-reload"
            ]
        },
